<div class="row">
  <div class="col-md-6">
    <h1>Products <%= link_to 'Create new', new_product_path, class: 'btn btn-primary' %></h1>
    <h2>Count: <%= @products.count %></h2>
    <br>

    <% unless flash[:notice].blank? %>
      <div class="alert alert-success">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <h3>Product details</h3>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= product.price %></td>
            <td>
              <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
